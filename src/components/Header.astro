---
import Logo from '../components/Logo.astro';

---

<nav>
  <span class="logo-wrapper">
    <Logo />
  </span>
  <ul>
    <li>
      <a href="#contact">Contact</a>
    </li>
    <li>
      <a href="#about">About</a>
    </li>
  </ul>
</nav>
<style>
  nav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    height: 100%;
    align-items: center;
  }
  .logo-wrapper {
    margin: auto;
    transform: translateX(50%);
  }
  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  nav ul li {
    display: inline-block;
  }
  nav ul li a {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: inherit;
  }
  nav ul li a:hover {
    background-color: #444;
  }
</style>
