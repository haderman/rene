  }
  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }
  .card {
    position: absolute;
    top: 40px;
    left: 40px;
    width: 50%;
    padding: 20px;
    /* height: 80%; */
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 1;
  }
  .card::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    background-color: rgba(0, 0, 0, 0.5);
    z-index: -1;
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }
</style>
